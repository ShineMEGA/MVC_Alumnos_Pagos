@model AlumnosPagosApp.Models.Pago

@{
    ViewData["Title"] = "Create";
}

<h1>Nuevo</h1>

<h4>Pago</h4>
<hr />
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Alumno" class="control-label"></label>
        <select asp-for="AlumnoID" class="form-control" asp-items="ViewBag.AlumnoID">
            <option value="">Select Alumno</option>
        </select>
        <span asp-validation-for="AlumnoID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FechaPago" class="control-label"></label>
        <input asp-for="FechaPago" class="form-control" type="date" />
        <span asp-validation-for="FechaPago" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Monto" class="control-label"></label>
        <input asp-for="Monto" class="form-control" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Concepto" class="control-label"></label>
        <input asp-for="Concepto" class="form-control" />
        <span asp-validation-for="Concepto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index">Regresar al listado</a>
